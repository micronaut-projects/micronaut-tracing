<configuration>

    <appender name='STDOUT' class='ch.qos.logback.core.ConsoleAppender'>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %logger{0} [%t:%X{traceId:-}] %m%n</pattern>
        </encoder>
    </appender>

    <root level='info'>
        <appender-ref ref='STDOUT' />
    </root>

</configuration>
